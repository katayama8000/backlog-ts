{
  "name": "@backlog/backlog-ts",
  "version": "0.1.0",
  "exports": "./src/mod.ts",
  "tasks": {
    "test": "deno test --allow-net --allow-env tests/client_test.ts tests/params_test.ts tests/request_test.ts tests/space_test.ts",
    "test:all": "deno test --allow-net --allow-env --allow-read",
    "test:integration": "deno test --allow-net --allow-env --allow-read tests/integration_test.ts",
    "test:watch": "deno test --allow-net --allow-env --allow-read --watch",
    "dev": "deno run --watch --allow-net src/mod.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/mod.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/testing": "jsr:@std/testing@^1"
  },
  "exclude": [
    "node_modules",
    "coverage",
    "dist"
  ],
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
